<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/training_txt_page_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training_img_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/training_header"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/training_img_menu"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/training_txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training_txt_solution_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/question_placeholder" />

    <TextView
        android:id="@+id/training_txt_solution"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/training_txt_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text="@string/solution_placeholder" />

    <TextView
        android:id="@+id/training_txt_question_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/solution_header"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/training_txt_solution_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/training_txt_question_header"
        android:layout_below="@+id/training_txt_training_message"
        android:layout_marginTop="19dp"
        android:text="@string/question_header"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/training_txt_swipe_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="@string/swipe_notice" />

    <TextView
        android:id="@+id/training_txt_training_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training_txt_page_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="@string/training_message" />

</RelativeLayout>
